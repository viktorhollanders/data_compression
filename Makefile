CXX = g++
CXXFLAGS = -Wall -std=c++11
CXXDEBUGFLAGS = -ggdb -fsanitize=address

SRC     := src
INCLUDE := include
LIB     := lib
LIBRARIES :=
EXECUTABLE := encoder
OUTPUTDIR := output

.PHONY: all run debug clean fresh test

all: $(EXECUTABLE)

$(EXECUTABLE): $(SRC)/*.cpp
	@echo "üîß Building..."
	$(CXX) $(CXXFLAGS) -I$(INCLUDE) $^ -o $@

run: clean all
	@clear
	@echo "üöÄ Executing..."
	@./$(EXECUTABLE)

test:

debug: CXXFLAGS += $(CXXDEBUGFLAGS)
debug: fresh all
	@echo "üîç Debug build complete!"

clean:
	@echo "üßπ Clearing..."
	-rm -f $(EXECUTABLE)
	-rm -rf $(OUTPUTDIR)/*

